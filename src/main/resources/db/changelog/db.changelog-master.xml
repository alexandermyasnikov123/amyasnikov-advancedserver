<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="Alexander Myasnikov">
        <addColumn tableName="user_entity">
            <column name="email" type="varchar(255)">
                <constraints unique="true"/>
            </column>
            <column name="test_column" type="INT"/>
        </addColumn>
    </changeSet>

    <changeSet id="2" author="Alexander Myasnikov">
        <renameColumn tableName="user_entity" oldColumnName="role_name" newColumnName="role"/>
    </changeSet>

    <changeSet id="3" author="Alexander Myasnikov">
        <delete tableName="role_entity" />
        <delete tableName="role_entity_users"/>
    </changeSet>

    <changeSet id="4" author="Alexander Myasnikov">
        <delete tableName="role_entity" schemaName="public"/>
        <delete tableName="role_entity_users" schemaName="public"/>
    </changeSet>

    <changeSet id="5" author="Alexander Myasnikov">
        <dropAllForeignKeyConstraints baseTableName="user_entity"/>
    </changeSet>

    <changeSet id="6" author="Alexander Myasnikov">
        <delete tableName="role_entity" schemaName="public"/>
        <delete tableName="role_entity_users" schemaName="public"/>
    </changeSet>
</databaseChangeLog>